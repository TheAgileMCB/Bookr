<!DOCTYPE html>
<html lang="en-us">

<head>

  <%- include('../layout/head') %>
</head>

<div class="content-wrapper">

  <body>

    <header id="header">
      <%- include('../layout/header') %>
    </header>

    <div class="bookr-bar">

      <div class="img-wrapper">
        <a href="/"><img src="/img/bookr-home.png" alt="A Troiano-Barnhart Property"></a>
      </div>

      <button class="search-button">
        <a href="./searches/new">Search</a>
      </button>

      <section class="counter dashed">
        <h5>Books:</h5>
        <h4><%= books.length %></h4>
      </section>

    </div>
    
    <h2>Your Library</h2>

    <main class="main-content">

      <% books.forEach(favoriteBook => {%>
        <article class="book dashed">
      <img src="<%= favoriteBook.image %>" />
      <h3><%= favoriteBook.title %></h3>
      <h6><%= favoriteBook.author %></h6>
      <p><span>Summary:</span> <%= favoriteBook.summary %></p>
      <p><span>ISBN:</span> <%= favoriteBook.isbn %></p>
      <p><span>Bookshelf:</span> <%= favoriteBook.bookshelf %> </p>
      <form action="/books/<%= favoriteBook.id %>/edit-view" method="get">
        <input type="hidden" name="image" value='<%= favoriteBook.image %>' />
        <input type="hidden" name="title" value='<%= favoriteBook.title %>' />
        <input type="hidden" name="author" value='<%= favoriteBook.author %>' />
        <input type="hidden" name="summary" value='<%= favoriteBook.summary %>' />
        <input type="hidden" name="isbn" value='<%= favoriteBook.isbn %>' />
        <input class="button" type="submit" value="Update Your Book" />
      </form>
    </article>
      <% }) %>

    </main>

    <footer id="footer">
      <%- include('../layout/footer') %>
    </footer>

  </body>

</div>

</html>