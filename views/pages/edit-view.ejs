<!DOCTYPE html>
<html lang="en-us">

<head>

    <%- include('../layout/head') %>
</head>

<div class="content-wrapper">

    <body>

        <header id="header">
            <%- include('../layout/header') %>
        </header>

        <main class="main-content new">

            <article class="book dashed">

            <img src="<%= book.image %>" />
            <h3><%= book.title %></h3>
            <h6><%= book.author %></h6>
            <p><span>ISBN:</span> <%= book.isbn %></p>
            <form action="/books/<%= book.id %>/edit-view?_method=PUT" method="POST">
                <input type="hidden" name="image" value='<%= book.image %>' />
                <input type="hidden" name="title" value='<%= book.title %>' />
                <input type="hidden" name="author" value='<%= book.author %>' />
                <p><span>Summary: </span></p><input type="text" name="summary" value='<%= book.summary %>' />
                <p><span>Bookshelf: </span></p><input type="text" name="bookshelf" placeholder="Add a bookshelf" value='<%= book.bookshelf %>' />
                <input class="button" type="submit" value="Update Your BookShelf" />
            </form>
            <form action="/books/<%= book.id %>/edit-view?_method=DELETE" method="POST">
                <input type="hidden" name="redirectUrl" value="/">
                <button class="button">Remove from Bookshelf</button>
            </form>

            </article>

        </main>

        <footer id="footer">
            <%- include('../layout/footer') %>
        </footer>

    </body>

</div>

</html>